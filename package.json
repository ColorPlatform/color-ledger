{
  "name": "@colorplatformjs/color-ledger",
  "version": "0.1.0",
  "description": "JS frontend to the Color Ledger app",
  "keywords": [
    "color",
    "color platform",
    "color wallet",
    "color signer",
    "ledger",
    "color javascript",
    "color sdk",
    "color-sdk"
  ],
  "main": "lib/color-ledger.js",
  "typings": "lib/types/color-ledger.d.ts",
  "files": [
    "lib"
  ],
  "author": "Based on the work of Fabian Weber <fabian@tendermint.com> by Color Platform https://color-platform.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/colorplatform/color-ledger.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf lib",
    "build": "webpack",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "prepublishOnly": "npm run build",
    "precommit": "lint-staged",
    "log": "simsala log",
    "release": "git checkout develop & git pull & git push origin develop:release"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.0",
    "@types/secp256k1": "^3.5.0",
    "@types/semver": "^6.0.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "husky": "^1.0.1",
    "jest": "^23.6.0",
    "jest-config": "^23.6.0",
    "lint-staged": "^8.0.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.2",
    "ts-loader": "^6.0.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.3",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2"
  },
  "dependencies": {
    "@ledgerhq/hw-transport-u2f": "^4.61.0",
    "@ledgerhq/hw-transport-webusb": "^4.61.0",
    "@colorplatformjs/color-keys": "2.0.3-rc",
    "ledger-cosmos-js": "^2.0.2",
    "secp256k1": "^3.7.0",
    "semver": "^6.1.0"
  }
}
